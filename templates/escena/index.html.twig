{% extends 'base.html.twig' %}

{% block title %}Escena index{% endblock %}

{% block body %}
    <h1>Escena index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Ciudad</th>
                <th>Tipo_crimen</th>
                <th>Descripcion</th>
                <th>Testigo1</th>
                <th>Testigo2</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for escena in escenas %}
            <tr>
                <td>{{ escena.id }}</td>
                <td>{{ escena.fecha }}</td>
                <td>{{ escena.ciudad }}</td>
                <td>{{ escena.tipoCrimen }}</td>
                <td>{{ escena.descripcion }}</td>
                <td>{{ escena.testigo1 }}</td>
                <td>{{ escena.testigo2 }}</td>
                <td>
                    <a href="{{ path('app_escena_show', {'id': escena.id}) }}">show</a>
                    <a href="{{ path('app_escena_edit', {'id': escena.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_escena_new') }}">Create new</a>
{% endblock %}
